# MCP Bridge 环境配置文件
# 版本：v1.0.0
# 更新时间：2025年1月14日

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
SERVER_WORKERS=1
LOG_LEVEL=INFO

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# MCP服务配置
CAPCUT_MCP_URL=mcp://localhost:9002
CAPCUT_MCP_TIMEOUT=30
CAPCUT_MCP_RETRY_COUNT=3

# HTTP服务配置
CAPCUT_HTTP_URL=http://localhost:9001
CAPCUT_HTTP_TIMEOUT=30
CAPCUT_HTTP_RETRY_COUNT=3

# 缓存配置
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=100

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=10

# 安全配置
API_KEY_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=1000

# 开发配置
DEBUG=false
RELOAD=false
TEST_MODE=false

# 日志配置
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/mcp_bridge
LOG_FILE_MAX_SIZE=100MB
LOG_STRUCTURED=true