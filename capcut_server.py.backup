def generate_timeline_html(materials):
    """ç”Ÿæˆæ—¶é—´è½´HTML"""
    if not materials:
        return '<div class="timeline-track"><div class="track-label">è§†é¢‘è½¨é“</div></div>'
    
    # æŒ‰ç±»å‹åˆ†ç»„ç´ æ
    video_materials = [m for m in materials if m.get('type') == 'video']
    audio_materials = [m for m in materials if m.get('type') == 'audio']
    text_materials = [m for m in materials if m.get('type') == 'text']
    image_materials = [m for m in materials if m.get('type') == 'image']
    
    timeline_html = ''
    
    # è§†é¢‘è½¨é“
    if video_materials:
        timeline_html += '<div class="timeline-track">'
        timeline_html += '<div class="track-label">è§†é¢‘è½¨é“</div>'
        timeline_html += '<div class="track-content">'
        for material in video_materials:
            timeline_html += f'<div class="timeline-item video" title="{material.get("name", "è§†é¢‘")}">{material.get("name", "è§†é¢‘")[:10]}</div>'
        timeline_html += '</div></div>'
    
    # éŸ³é¢‘è½¨é“
    if audio_materials:
        timeline_html += '<div class="timeline-track">'
        timeline_html += '<div class="track-label">éŸ³é¢‘è½¨é“</div>'
        timeline_html += '<div class="track-content">'
        for material in audio_materials:
            timeline_html += '<div class="timeline-item audio" title="{}">{}></div>'.format(material.get("name", "éŸ³é¢‘"), material.get("name", "éŸ³é¢‘")[:10])
        timeline_html += '</div></div>'
    
    # æ–‡æœ¬è½¨é“
    if text_materials:
        timeline_html += '<div class="timeline-track">'
        timeline_html += '<div class="track-label">æ–‡æœ¬è½¨é“</div>'
        timeline_html += '<div class="track-content">'
        for material in text_materials:
            timeline_html += '<div class="timeline-item text" title="{}">{}></div>'.format(material.get("name", "æ–‡æœ¬"), material.get("name", "æ–‡æœ¬")[:10])
        timeline_html += '</div></div>'
    
    # å›¾ç‰‡è½¨é“
    if image_materials:
        timeline_html += '<div class="timeline-track">'
        timeline_html += '<div class="track-label">å›¾ç‰‡è½¨é“</div>'
        timeline_html += '<div class="track-content">'
        for material in image_materials:
            timeline_html += '<div class="timeline-item image" title="{}">{}></div>'.format(material.get("name", "å›¾ç‰‡"), material.get("name", "å›¾ç‰‡")[:10])
        timeline_html += '</div></div>'
    
    return timeline_html if timeline_html else '<div class="timeline-track"><div class="track-label">ç©ºè½¨é“</div></div>'

